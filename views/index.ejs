<%- include('./partials/_header'); %>
    <!-- /include header -->

    <!-- main site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/addUser" class="border-shadow">
                    <span class="test-gradient">New User <i class="fa-solid fa-user-plus"></i></span>
                </a>
            </div>
            <!-- form handling -->
            <form action="/" method="post">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>@Email</th>
                            <th>Gender</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('./partials/_show') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
    <!-- /main site -->

    <!-- include footer -->
    <%- include('./partials/_footer'); %>
